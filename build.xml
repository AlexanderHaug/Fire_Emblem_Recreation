<project>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="tests" destdir="build/classes"/>
    </target>

    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/testAllCreatureClasses/testArcherClasses.java" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="oata.testAllCreatureClassesTestArcherClasses"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
        <java jar="build/jar/testAllCreatureClasses/testArcherClasses.java" fork="true"/>
    </target>

</project>